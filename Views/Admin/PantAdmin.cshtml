<div class="card-deck">


    @foreach (var item in Model.Pants)
    {
        <div class="card-deck container col-3 ">

            <div class="card-body cardMerch">

                <p><a asp-action="Details" asp-route-id="@item.Id"><img src="@Html.DisplayFor(modelItem => item.PImageUrl)" class="img-thumbnail" alt="ERROR"></a></p>



                <b><em>@Html.DisplayFor(modelItem => item.PBrand)</em></b> <em>@Html.DisplayFor(modelItem => item.PModel)</em> <br>
                <b>Color:</b> @Html.DisplayFor(modelItem => item.PColor) <br>
                <b>Size:</b> @Html.DisplayFor(modelItem => item.SizeCat) -  @Html.DisplayFor(modelItem => item.PSize) <br>
                <b>Qty:</b> @Html.DisplayFor(modelItem => item.PQtyOnHand)  <br />
                @if (item.PSalePrice < item.PPrice)
                {
                    <b>Priced: </b><p class="d-inline" style="color:red">@Html.DisplayFor(modelItem => item.PSalePrice)</p>
                }
                else
                {
                    <b>Priced:</b> @Html.DisplayFor(modelItem => item.PPrice)
                }



                @*<p><a asp-controller="Helmets" asp-action="Details" asp-route-id="@item.Id">details</a></p>*@
                <button class="btn btn-info"><a asp-controller="Pants" asp-action="Edit" asp-route-id="@item.Id" style="color:red">Edit</a></button>






                @*<div class="">
                        <button class="d-inline-block btn btn-success justify-content-center" style="width:50px; height:40px"><i class="fas fa-cart-plus justify-content-center" style="color:green"></i></button>
                    </div>*@
            </div>
        </div>

    }

</div>

