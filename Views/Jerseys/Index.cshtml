@model GearShopV2.Models.GearSizeViewModel

@{
    ViewData["Title"] = "Index";
}

<h1 class="text-center">Closeout Jerseys</h1>
<!--
<p>
    <a asp-action="Create">Create New</a>
</p>
    -->

<div class="container">
    <div class="alert alert-danger alert-dismissible">
        <button type="button" class="close" data-dismiss="alert">&times;</button>
        <strong>BE ADVISED!!</strong> These items are not for sale nor are the prices real by any means. They are used simply as examples for the web application!!
    </div>
</div>


<form asp-controller="Jerseys" asp-action="Index" method="get">
    <p>
        <select asp-for="SizeCategory" asp-items="Model.SizeCats">
            <option value="">All</option>
        </select>

        Brand: <input type="text" name="searchString">
        <input type="submit" value="Filter" />
    </p>
</form>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Jerseys[0].JBrand)
            </th>
            <!--
            <th>
                @Html.DisplayNameFor(model => model.Jerseys[0].JModel)
            </th>
            -->
            <th>
                @Html.DisplayNameFor(model => model.Jerseys[0].JColor)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Jerseys[0].JSize)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Jerseys[0].JPrice)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Jerseys[0].JSalePrice)
            </th>
            <!--
            <th>
                @Html.DisplayNameFor(model => model.Jerseys[0].JQtyOnHand)
            </th>
            
            <th>
                @Html.DisplayNameFor(model => model.Jerseys[0].JImageUrl)
            </th>            
            -->
            <th>
                @Html.DisplayNameFor(model => model.Jerseys[0].SizeCat)
            </th>
            
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Jerseys) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.JBrand)-
                @Html.DisplayFor(modelItem => item.JModel)
            </td>

            <td>
                @Html.DisplayFor(modelItem => item.JColor)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.JSize)
            </td>
            <td>
                $@Html.DisplayFor(modelItem => item.JPrice)
            </td>
            <td>
                $@Html.DisplayFor(modelItem => item.JSalePrice)
                @if (item.JSalePrice < item.JPrice)
                {
                        <span class="badge badge-success">ON SALE</span>
                }
                </td>
            <!--
            <td>
                @Html.DisplayFor(modelItem => item.JQtyOnHand)
            </td>
            -->

            <td>
                @Html.DisplayFor(modelItem => item.SizeCat)
            </td>

            <td>
                <a asp-action="Details" asp-route-id="@item.Id"><img src="@Html.DisplayFor(modelItem => item.JImageUrl)" class="img-thumbnail" alt="ERROR"></a>
            </td>



            <!--
    <td>
        <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
        <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
        <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
    </td>
     -->
        </tr>
}
    </tbody>
</table>
